<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.nightscout.android.MainActivity">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:visibility="invisible"
        android:id="@+id/MainLayout">

        <RelativeLayout
            android:id="@+id/layoutIcons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageViewUSB"
                android:layout_alignParentLeft="true"
                android:src="@drawable/ic_usb_disconnected" />

            <ImageView
                android:id="@+id/imageViewUploadStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_toRightOf="@+id/imageViewUSB"
                android:src="@drawable/ic_upload_fail" />

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/unknown_values"
            android:id="@+id/sgValue"
            android:layout_alignParentLeft="true"
            android:layout_alignRight="@+id/stopSyncingButton"
            android:textSize="@android:dimen/notification_large_icon_width"
            android:singleLine="true"
            android:gravity="center"
            android:layout_below="@+id/layoutIcons" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/unknown_values"
            android:id="@+id/timeAgo"
            android:layout_below="@+id/sgValue"
            android:layout_marginTop="110dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:gravity="center"
            android:singleLine="true"
            android:layout_alignRight="@+id/sgValue" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/button_two_day_sync"
            android:id="@+id/stopSyncingButton"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentLeft="true" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/DisclaimerRelativeLayout">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Disclaimer"
            android:id="@+id/disclaimerTitle"
            android:textStyle="bold"
            android:gravity="center" />

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/scrollView"
            android:layout_below="@+id/disclaimerTitle"
            android:layout_above="@+id/understandButton">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/disclaimerText"
                android:autoLink="web"
                android:text="@string/pref_summary_i_understand" />
        </ScrollView>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/disclaimer_accept"
            android:id="@+id/understandButton"
            android:layout_gravity="bottom"
            android:layout_alignParentLeft="false"
            android:layout_alignParentBottom="true"
            android:enabled="false"
            android:layout_alignParentRight="false"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>

</RelativeLayout>
